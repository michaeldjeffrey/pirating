package  {		import flash.display.MovieClip;	import flash.events.MouseEvent;	import flash.events.Event; 		public class GovAgent extends MovieClip {		var enterSpeed = 8;		var speed = (Math.floor(Math.random() * (100 - 40)) + 40)/100;		var minNum = 180;		var maxNum = 350;		var scaleMin = .6;		var scaleMax = 1;		var scale = (Math.floor(Math.random() * (scaleMax - scaleMin)) + scaleMin);		private var exp:Explosion;		var goInDirection:int;		var indexPos:int;				public function GovAgent(direction:int) {			//set direction variable			goInDirection = direction;			scaleX = scale;			scaleY = scale;			rotation = 90;						//flip agent around if going left			if(goInDirection == -1){				x = 550;				scaleY *= goInDirection;				//enterSpeed *= goInDirection;			}						//random vertical position			y = (Math.floor(Math.random() * (maxNum - minNum + 1)) + minNum);						//add listeners			addEventListener("enterFrame", onEnterFrame);			addEventListener(MouseEvent.CLICK, explode);		}		public function onEnterFrame(ev:Event){			if(enterSpeed < speed+1 ){				var dir = Math.atan2(Main.instance.selectedFish.y-y, Main.instance.selectedFish.x-x)*180/Math.PI;				x += Math.cos(dir*Math.PI/180)*speed;				y += Math.sin(dir*Math.PI/180)*speed;			} else {				if(scaleY < 0){					x -= enterSpeed;					enterSpeed = enterSpeed*.9;				} else {					x += enterSpeed;					enterSpeed = enterSpeed*.9;				}			}			if(x <= -10 || x >= 580){				killYourself();			}		}		public function explode(ev:MouseEvent){			exp = new Explosion();			exp.x = x;			exp.y = y;			this.parent.addChild(exp);			killYourself();		}		public function killYourself(){			Main(root).govAgentArray.splice(this, 1);			this.parent.removeChild(this);		}	}}